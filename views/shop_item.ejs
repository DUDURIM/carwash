<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- bootstrap_css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- bootstrap_js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <title>Document</title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }
        
        .carousel {
            height: 400px;
        }
        
        .carousel-item>img {
            height: 300px;
        }
        
        .container {
            /* flex-wrap: wrap; */
            align-items: flex-start;
        }
        
        .row {
            flex-direction: column;
            justify-content: space-around;
            align-items: flex-start;
        }
        
        .col-3 {
            width: 200px;
            height: 250px;
            margin: 10px 20px 30px 20px;
            box-shadow: 0px 0px 5px gainsboro;
        }
        
        .shop_item_in {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            margin: 50px 10px 20px 10px;
        }
        
        .shop_item_in>img {
            width: 350px;
            height: 380px;
            margin-right: 20px;
        }
        
        .shop_item_in>img:hover {
            background-color: skyblue;
        }
        
        .shop_item_paper {
            width: 350px;
            height: 380px;
            box-shadow: 0px 0px 2px gainsboro;
        }
        
        .shop_item_paper>div {
            margin: 20px 10px 10px 10px;
        }
        
        .item_price {
            font-size: 30px;
            color: red;
        }
        
        .shop_item_Ex {
            margin: 30px 50px;
            box-shadow: 0px 0px 5px gainsboro;
            height: 600px;
        }
        
        .shop_item_Ex>img {
            width: 100%;
            height: 100%;
        }
        
        .accordion-button {
            width: 300px;
            height: 10px;
        }
        
        .accordion-body {
            width: 300px;
            height: 50px;
            background-color: white;
        }
        
        .accordion-collapse {
            width: 300px;
        }
    </style>
</head>

<body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Dropdown
                </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li><a class="dropdown-item" href="#">Another action</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled">Disabled</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- order & item & EX -->
    <div class="item_center">
        <h1>ORDER</h1>
        <div class="shop_item_in">
            <img src="<%=data.img%>" alt="">
            <div class="shop_item_paper">
                <div class="row-cols-2">
                    <div class="col">
                        <h1>
                            <%=data.name%>
                                <%console.log(data)%>
                        </h1>
                    </div>
                    <div class="col item_price">
                        <%=data.price%>
                    </div>
                    <br>
                    <div class="col">item_Explanation</div>
                    <br>
                    <div class="col">
                        <div class="accordion accordion-flush" id="accordionFlushExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="flush-headingOne">
                                    <button class="accordion-button collapsed" style="border:1px solid dark;" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                              item_type
                            </button>
                                </h2>

                                <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">

                                    <div class="accordion-body">item_type</div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <br>

                </div>
            </div>
        </div>
    </div>
    <div class="shop_item_Ex">
        <img src="<%=data.infor%>" alt="">
    </div>
</body>

</html>