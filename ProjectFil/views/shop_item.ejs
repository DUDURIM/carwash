    <script>
        function countmain(type) {
            // 결과를 표시할 element
            const resultElement = document.getElementById('resultmain');

            // 현재 화면에 표시된 값
            let number = resultElement.innerText;

            // 더하기/빼기
            if (type === 'plus') {
                number = parseInt(number) + 1;
            } else if (type === 'minus') {
                number = parseInt(number) - 1;
            }

            // 결과 출력
            resultElement.innerText = number;
        }

        function countsub(type) {
            // 결과를 표시할 element
            const resultElement = document.getElementById('resultsub');

            // 현재 화면에 표시된 값
            let number = resultElement.innerText;

            // 더하기/빼기
            if (type === 'plus') {
                number = parseInt(number) + 1;
            } else if (type === 'minus') {
                number = parseInt(number) - 1;

            }
            // 결과 출력
            resultElement.innerText = number;
        }

        // 가격 계산 
        var totalPriceM = 0;
        var totalPriceS = 0;
        var price = 0;
        var totalmain = 0;
        var totalsub = 0;
        // comma remove
        function stringNumberToInt(s) {
            return parseInt(s.replace(/,/g, ""));
        }
        price = stringNumberToInt($("#sumM").text());
        price = stringNumberToInt($("#sumS").text());
        $(function() {
            $("input").on('click', function() {
                totalmain = Number($("#resultmain").text());
                totalsub = Number($("#resultsub").text());
                totalPriceM = price * totalmain;
                totalPriceS = price * totalsub;
                // comma add
                totalPriceM = totalPriceM.toLocaleString("ko-KR");
                totalPriceS = totalPriceS.toLocaleString("ko-KR");
                $("#sumM").text(totalPriceM);
                $("#sumS").text(totalPriceS);
            });
        });
        // 채팅
        // 버튼 클릭시 우측에서 슬라이드 나오면서 버튼은 사라짐
        $("#chat_btn").click(function() {
            $("#menu").addClass("open");
            $("#chat_btn").addClass("chat_btn");

        });
        // X버튼 클릭시 슬라이드 들어가면서 버튼은 생성됨
        $(".close").click(function() {
            $("#menu").removeClass("open");
            $("#chat_btn").removeClass("chat_btn");
        });
    </script>
