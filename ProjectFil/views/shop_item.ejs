<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- bootstrap_css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- bootstrap_js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"
        integrity="sha256-lSjKY0/srUM9BE3dPm+c4fBo1dky2v27Gdjm2uoZaL0=" crossorigin="anonymous"></script>
    <!-- alert  -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.10/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.10/dist/sweetalert2.min.js"></script>

    <title>shop -
        <%=data.name%>
    </title>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <style>
        /* 해피니스 산스 title */

        @font-face {
            font-family: 'Happiness-Sans-Title';
            src: url('https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_2205@1.0/Happiness-Sans-Title.woff2') format('woff2');
            font-weight: normal;
            font-style: normal;
        }

        /* @font-face {
           font-family: 'Happiness-Sans-Bold';
           src: url('https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_2205@1.0/Happiness-Sans-Bold.woff2') format('woff2');
           font-weight: 700;
           font-style: normal;
        } */

        * {
            font-family: 'Happiness-Sans-Title';
            font-weight: normal;
            font-style: normal;
            margin: 0;
            padding: 0;
        }

        hr {
            width: 100%;
            border: 1px solid gainsboro;
        }

        ul {
            list-style: none;
        }

        h1>img {
            width: 40px;
            height: 40px;
            margin-left: 10px;
        }

        /* navbar */

        .navCss {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1;
        }

        .navberM {
            margin: auto;
        }

        .navbar-brand {
            margin-left: 10px;
        }

        /* order*/

        .item_center>h1 {
            margin-top: 20px;
            padding-left: 20px;
            width: 100%;
            height: 50px;
            align-items: center;
        }

        .item_center {
            display: flex;
            flex-direction: column;
        }

        /* orderImg*/

        .shop-item {
            height: 400px;
        }

        /* itemEx */

        @media screen and (max-width:850px) {
            .shop_item_in {
                flex-direction: column;
            }
        }

        .shop_item_in {
            display: flex;
            justify-content: center;
            align-content: center;
        }

        .item_price {
            display: flex;
            justify-content: center;
            align-content: center;
            margin: 50px 10px 20px 10px;
            flex-direction: column;
        }

        .shop_item_in>img {
            justify-content: center;
            margin: 50px 0 20px 20px;
            width: 480px;
            height: 500px;
            box-shadow: 0px 0px 5px gainsboro;
        }

        .shop_item_in>img:hover {
            background-color: skyblue;
        }

        .shop_item_paper {
            display: block;
            width: 500px;
            height: 500px;
            margin: 50px 0 20px 10px;
            box-shadow: 0px 0px 2px rgb(167, 164, 164);
            border-radius: 5px;
        }

        .shop_item_paper>div {
            margin: 20px 10px 10px 10px;
        }

        .item_name {
            margin-top: 20px;
            width: 100%;
        }

        .item_price {
            margin-top: 20px;
            text-align: end;
            font-size: 30px;
            color: red;
        }

        .shop_item_Ex {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 30px;
            width: 100%;
        }

        .shop_item_Ex>img {
            margin-left: 20px;
            width: 1000px;
            height: 100%;
            box-shadow: 0px 0px 5px gainsboro;
        }

        /* paperDrop */

        .dropdown,
        .dropdown>a {
            width: 300px;
            height: 30px;
            white-space: normal;
            cursor: pointer;
        }

        .dropdown-menu>li {
            width: auto;
        }

        .dropdown-toggle {
            display: flex;
            align-items: center;
        }

        .itemPick {
            height: 40px;
            margin-bottom: 50px;
        }

        #hide {
            display: none;
        }

        #count {
            padding: 10px;
            display: flex;
            justify-content: center;
        }

        #count>input {
            padding: 0 10px;
        }

        #gume {
            margin: 10px 0 0 10px;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        #sum {
            color: red;
        }

        #resultmain,
        #resultsub {
            border: 1px solid black;
            margin: 0;
            padding: 1px 10px;
        }

        .button_ds {
            border: 1px solid gainsboro;
            height: 50px;
            width: 150px;
            border-radius: 5px;
        }

        .divIn {
            display: flex;
            justify-content: end;
            padding-bottom: 20px;
        }

        .cart {
            height: 70px;
            justify-content: space-around;
        }

        .cart>span {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
        }

        .cart>img {
            width: 50px;
            height: 50px;
            align-items: flex-start;
            justify-content: center;
        }

        .modal-footer {
            margin-top: 30px;
        }

        /* footer */
    </style>
</head>

<body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <a href="" class="navbar-brand">Foambble Bobble</a>
        <!-- Toggle Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav navbarM">
                <li class="nav-item"><a href="/" class="nav-link">세차장 조회</a></li>
                <li class="nav-item"><a href="" class="nav-link">상점</a></li>
                <li class="nav-item"><a href="/club" class="nav-link">동호회</a></li>
            </ul>
        </div>
    </nav>
    <!-- order -->
    <div class="item_center">
        <h1>CarWash SHOP<img src="/static/img/shopping-cart.png"></h1>
        <div class="shop_item_in container">
            <img src="<%=data.img%>" alt="">
            <!-- itemEx -->
            <div class="shop_item_paper">
                <div class="row">
                    <div class="col-2 item_name">
                        <h1>
                            <%=data.name%>
                        </h1>
                    </div>
                    <div class="col item_price">
                        <h1>
                            &#8361;
                            <%=data.price%>
                        </h1>
                    </div>
                    <hr>
                    <div class="col-4">

                        <div class="dropdown">
                            <a class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                상품 선택
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <li>
                                    <a class="dropdown-item" onclick="$('#hide').show()">
                                        <%=data.name%>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <br>
                    <div class="itemPick">
                        <div id="hide">
                            <div id="gume">
                                <%=data.name%>
                                    <div id="count">
                                        <input type="button" onclick="countmain('plus')" value="+">
                                        <span class="ct" id="resultmain">1</span>
                                        <input type="button" onclick="countmain('minus')" value="-">
                                    </div>
                                    <span class="price" id="sum">
                                        <%=data.price%>
                                    </span>
                            </div>
                        </div>
                        <br>
                        <div class="divIn">
                            <!-- Button trigger modal -->
                            <button class="button_ds" type="button" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">구매하기</button>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">장바구니</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="cart">
                                                <img src=<%=data.img%> alt="">
                                                <span>
                                                    <%=data.name%>
                                                </span>
                                                <span id="sum">
                                                    <%=data.price%>
                                                </span>
                                                <span id="count">
                                                    <input type="button" onclick="countsub('plus')" value="+">
                                                    <span class="ct" id="resultsub">1</span>
                                                    <input type="button" onclick="countsub('minus')" value="-">
                                                </span>
                                            </div>
                                        </div>
                                        <br>

                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">닫기</button>
                                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal"
                                                onclick="Swal.fire('구매완료!!! 감사합니다 :&#41;')">구매하기</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="shop_item_Ex">
            <img src="<%=data.infor%>" alt="">
        </div>
        <!-- alerts -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="jumbotron text-center mt-5 mb-0">

            <h3 class="text-secondary">Foambble Bobble</h3>
            <p>Foambble Bobble Homepage is Designed by <span class="text-primary">6 group</span></p>

        </div>
        <script>
            function countmain(type) {
                // 결과를 표시할 element
                const resultElement = document.getElementById('resultmain');

                // 현재 화면에 표시된 값
                let number = resultElement.innerText;

                // 더하기/빼기
                if (type === 'plus') {
                    number = parseInt(number) + 1;
                } else if (type === 'minus') {
                    number = parseInt(number) - 1;
                }

                // 결과 출력
                resultElement.innerText = number;
            }

            function countsub(type) {
                // 결과를 표시할 element
                const resultElement = document.getElementById('resultsub');

                // 현재 화면에 표시된 값
                let number = resultElement.innerText;

                // 더하기/빼기
                if (type === 'plus') {
                    number = parseInt(number) + 1;
                } else if (type === 'minus') {
                    number = parseInt(number) - 1;

                }
                // 결과 출력
                resultElement.innerText = number;
            }

            // 가격 계산 
            var totalPrice = 0;
            var price = 0;
            var total = 0;

            function stringNumberToInt(s) {
                return parseInt(s.replace(/,/g, ""));
            }
            price = stringNumberToInt($("#sum").text());
            $("input").on('click', function () {
                
                total = Number($("#resultmain").text());
                totalPrice = price * total;
                console.log(totalPrice);
                $("#sum").text(totalPrice);
            });

            console.log(price)
            console.log(total)
        </script>
</body>

</html>